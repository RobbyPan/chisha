.container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-top: 300rpx;
}
.container .main-container {
  font-size: 60rpx;
  width: 100vw;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: relative;
}
.container .main-container .logo {
  position: absolute;
  top: 0;
  width: 250rpx;
  height: 250rpx;
}
.container .main-container .logo image {
  width: 100%;
  height: 100%;
}
.container .main-container .title-container {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .main-container image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
}
.container .main-container .links-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  width: 80vw;
  font-size: 35rpx;
  position: absolute;
  bottom: 20rpx;
}
.container .main-container .links-container .links-box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-basis: 50%;
  height: 100rpx;
}
.container .main-container .meitaun-container {
  width: 100%;
  height: 250rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 20rpx;
  font-size: 32rpx;
}
.container .main-container .meitaun-container .links-box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-basis: 50%;
  height: 100rpx;
}
.container .btn-container {
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #6467ef;
  color: #fff;
  width: 350rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  box-shadow: 0rpx 15rpx 20rpx rgba(100, 103, 239, 0.2);
}
.container .type-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
  width: 500rpx;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}
.container .type-container .type-box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-basis: 25%;
}
.container .footer {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  position: absolute;
  bottom: 30rpx;
  font-size: 25rpx;
}
.container .footer .copy {
  text-decoration: underline;
  color: #6467ef;
}
.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.1);
  padding-top: 200rpx;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.modal .modal-container {
  width: 80vw;
  height: 65vh;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 20rpx;
}
.modal .modal-container .modal-title-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.modal .modal-container .modal-textarea-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.modal .modal-container .modal-textarea-container .modal-textarea {
  width: 100%;
  height: 850rpx;
  padding: 0rpx 10rpx;
  border-radius: 40rpx;
  background-color: #f8f8f8;
}
.modal .modal-container .modal-btn-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 50rpx 0;
  position: relative;
}
.modal .modal-container .modal-btn-container .modal-btn-confirm {
  width: 250rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #6467ef;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal .modal-container .modal-btn-container .modal-btn-reset {
  position: absolute;
  top: 55rpx;
  right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #747479;
}
.modal .modal-container .modal-btn-container .tips {
  position: absolute;
  top: 0;
  left: 10rpx;
  font-size: 25rpx;
  color: #747479;
}
.active-text {
  color: #6467ef;
}
.inactive-text {
  color: #000000;
}
